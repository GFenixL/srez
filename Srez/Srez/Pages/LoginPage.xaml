<Page x:Class="Srez.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Srez.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" Width="350" Margin="0, 20">
                <TextBlock>Логин</TextBlock>
                <TextBox x:Name="LoginTextBox" Margin="10"/>
                <TextBlock>Пароль</TextBlock>
                <PasswordBox x:Name="PasswordTextBox" Margin="10"/>
            </StackPanel>
            
            <Button x:Name="LoginButton" Height="30" Margin="10, 0" Content="Войти" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
